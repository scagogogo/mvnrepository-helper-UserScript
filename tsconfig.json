{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ES6"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["jquery", "greasemonkey"]  // 显式指定使用 jQuery 的类型定义
  },
  "include": ["src/**/*", "types.d.ts"],
  "exclude": ["node_modules"]
}